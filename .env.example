# WhatsApp SaaS Platform Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/whatsapp_saas

# Company-level API Keys (comma-separated)
COMPANY_API_KEYS=comp_demo_master_123,comp_prod_master_456,comp_enterprise_789

# Sub-client API Keys (comma-separated)  
SUBCLIENT_API_KEYS=subclient_demo_123,user_demo_456,subclient_prod_789

# WhatsApp Configuration
WHATSAPP_SESSION_PATH=./sessions
WHATSAPP_CHROME_PATH=/usr/bin/chromium-browser

# Server Configuration
PORT=5000
NODE_ENV=development

# Rate Limiting
MAX_REQUESTS_PER_WINDOW=1000
RATE_LIMIT_WINDOW_MS=900000

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_URL=https://your-domain.com/webhook

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Optional: External Services
REDIS_URL=redis://localhost:6379
SLACK_WEBHOOK_URL=https://hooks.slack.com/your-webhook
EMAIL_SERVICE_API_KEY=your_email_service_key

# Development/Testing
ENABLE_API_DOCS=true
ENABLE_SWAGGER=true
MOCK_WHATSAPP=false