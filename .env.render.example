# Render.com Environment Variables Configuration
# Copy these to your Render service environment variables

# === REQUIRED ENVIRONMENT VARIABLES ===

# Platform Detection
RENDER=true
NODE_ENV=production

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database

# Chrome/Browser Configuration
CHROME_BIN=/usr/bin/google-chrome

# Server Configuration
PORT=10000

# === OPTIONAL ENVIRONMENT VARIABLES ===

# WhatsApp Configuration
WPP_MAX_SESSIONS=50
WPP_SESSION_TIMEOUT=300000

# Webhook Configuration
WEBHOOK_BASE_URL=https://your-app-name.onrender.com

# JWT Secret (if using JWT authentication)
JWT_SECRET=your-secure-jwt-secret-key-here

# Session Storage
SESSION_SECRET=your-secure-session-secret-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/tmp/uploads

# Logging Configuration
LOG_LEVEL=info
LOG_TO_FILE=false

# === DEPLOYMENT-SPECIFIC ===

# Render External URL (auto-populated by Render)
RENDER_EXTERNAL_URL=https://your-app-name.onrender.com

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000